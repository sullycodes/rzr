<p id="notice"><%= notice %></p>

<h1>Estimates</h1>


<h3> Enter your adrdress to get the RedZilReal Average </h3>

<%= text_field_tag 'address', '', size: 75 %>

<%= button_to 'Scrape', scrape_estimates_path %>

<table>
  <thead>
    <tr></tr>
    <tr>
      <th>Site</th>
      <th>Address</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estimates.each do |estimate| %>
      <tr>
        <td><%= estimate.site %></td>
        <td><%= estimate.address %></td>
        <td><%= estimate.price %></td>
        <td><%= link_to 'Show', estimate %></td>
        <td><%= link_to 'Edit', edit_estimate_path(estimate) %></td>
        <td><%= link_to 'Destroy', estimate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Estimate', new_estimate_path %>
